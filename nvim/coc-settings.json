{
  "suggest.maxCompleteItemCount": 20,
  "signature.enable": true,
  "signature.target": "float",
  "signature.preferShownAbove": false,
  "signature.hideOnTextChange": true,
  "signature.triggerSignatureWait": 1000,
  "diagnostic.errorSign": "X",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": ">>",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": true,
  "tsserver.enable": true,
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  "typescript.suggest.enabled": true,
  "javascript.suggest.enabled": true,
  "javascript.suggestionActions.enabled": false,
  "typescript.suggestionActions.enabled": false,
  "suggest.autoTrigger": "trigger",
  "yaml.customTags": [ "!Ref", "!Sub", "!GetAtt", "!Equals" ],
  "python.linting.enabled": false,
  "python.linting.mypyEnabled": false,
  "pyright.enable": false,
  "ruff.enableExperimentalFormatter": true,
  "python.formatting.provider": "none",
  "python.pythonPath": "${env:HOME}/conda-path",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		}
  },
  "coc.preferences.extensionUpdateCheck": "daily"
}

